<Page
    x:Class="MusicMixer.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MusicMixer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>

        <StackPanel Background="LightGray" Grid.Row="1" Grid.Column="0">

            <Button x:Name="libBtn"
                    Width="300"
                    Height="50"
                    Content="Library"
                    FontSize="20"
                    BorderBrush="Black"
                    HorizontalAlignment="Center"
                    
            />

            <Button x:Name="metroBtn"
                    Width="300"
                    Height="50"
                    Content="Metronome"
                    FontSize="20"
                    BorderBrush="Black"
                    HorizontalAlignment="Center"
            />

            <Button x:Name="socialBtn"
                    Width="300"
                    Height="50"
                    Content="Social"
                    FontSize="20"
                    BorderBrush="Black"
                    HorizontalAlignment="Center"
            />

            <Button x:Name="playBtn"
                    Width="150"
                    Height="50"
                    Content="Play"
                    FontSize="20"
                    BorderBrush="Black"
                    HorizontalAlignment="Left"
            />

            <Button x:Name="pauseBtn"
                    Width="150"
                    Height="50"
                    Content="Play"
                    FontSize="20"
                    BorderBrush="Black"
                    HorizontalAlignment="Right"
            />



        </StackPanel>

        <ScrollViewer Background="DarkGray">

            <ListView  Margin="30" Background="DimGray" Grid.Row="0" Grid.Column="0">


            </ListView>

        </ScrollViewer>

        <StackPanel Background="LightSteelBlue" Grid.Row="0" Grid.Column="1">



        </StackPanel>

        <Grid Background="Gray" Grid.Row="1" Grid.Column="1">

        </Grid>

    </Grid>
</Page>
