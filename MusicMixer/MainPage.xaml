<Page
    x:Class="MusicMixer.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MusicMixer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls">

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>

        <RelativePanel Background="LightGray" Grid.Row="1" Grid.Column="0">

            <Button x:Name="libBtn"
                Width="300"
                Height="50"
                Content="Library"
                FontSize="20"
                BorderBrush="Black"
                    
            />

            <Button x:Name="metroBtn"
                Width="300"
                Content="Social"
                FontSize="20"
                BorderBrush="Black"
                Height="50" RelativePanel.Below="libBtn"
            />

            <Button x:Name="socialBtn"
                Width="300"
                Height="50"
                Content="Metronome"
                FontSize="20"
                BorderBrush="Black" RelativePanel.Below="metroBtn"
            />

            <controls:NumberBox x:Name="bpmNumber"
                Width="77"
                Height="50"
                Header="Enter BPM:" 
                Value="128" 
                SpinButtonPlacementMode="Compact" 
                SmallChange="10"
                LargeChange="100" Margin="0,0,0,0" RelativePanel.AlignRightWithPanel="True" RelativePanel.Below="playBtn"/>
            <Button x:Name="playBtn"
                Width="112"
                Height="50"
                Click="bpmClick"
                Content="Start/Stop"
                FontSize="20"
                BorderBrush="Black" RelativePanel.RightOf="" RelativePanel.AlignRightWithPanel="True"
            />



        </RelativePanel>

        <ScrollViewer Background="DarkGray">

            <ListView  Margin="30" Background="DimGray" Grid.Row="0" Grid.Column="0"/>

        </ScrollViewer>

        <Grid x:Name="mainViewer" Grid.Row="0" Grid.Column="1" RenderTransformOrigin="0.5,0.5" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <RelativePanel Grid.Column="0" Grid.Row="0" Background="LightSteelBlue">
                
            </RelativePanel>
            
            <RelativePanel Grid.Column="1" Grid.Row="0" Background="LightCyan">
                
            </RelativePanel>
            
        </Grid>

        <Grid Background="Gray" Grid.Row="1" Grid.Column="1"/>

    </Grid>
</Page>
